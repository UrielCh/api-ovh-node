{
    "compilerOptions": {
        "target": "ESNext",
        "declaration": false,
        "strict": true,
        "noUncheckedIndexedAccess": true,
        "moduleResolution": "NodeNext",
        "module": "NodeNext",
        "esModuleInterop": true,
        "outDir": "esm",
        "skipLibCheck": true,
        "moduleDetection": "force"
    },
    "include": ["./src"]
}