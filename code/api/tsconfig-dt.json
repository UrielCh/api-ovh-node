{
    "compilerOptions": {
        "target": "ESNext",
        "module": "ES2020",
        "declaration": true,
        "strict": true,
        "moduleResolution": "node",
        "esModuleInterop": true,
        "alwaysStrict": true,
        "sourceMap": true,
        "outDir": "types",
        "rootDirs": ["src"],
        "verbatimModuleSyntax": true,
        "emitDeclarationOnly": true,
    },
    "include": [
        "src"
    ]
}